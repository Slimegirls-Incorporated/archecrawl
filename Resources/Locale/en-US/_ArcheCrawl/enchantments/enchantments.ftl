add-enchantment-command = Adds an enchantment to the specified enchantable item.

enchantment-description-wrapper = {$amount ->
    [one] {$description}
    *[other] {$description} [color={$color}](×{$amount})[/color]
}

enchantment-prefix-flame = flaming
enchantment-description-flame = It's [color=#ffb840]engulfed in flames[/color].
enchantment-prefix-lucky = lucky
enchantment-description-lucky = Critical hits are [color=#69e885]more likely[/color] to occur.
enchantment-prefix-critical = critical
enchantment-description-critical = Critical hits deal [color=#f42f5d]more damage[color].
